<!--
'remote: true' automatically sets the form to use Ajax
to asynchronously send requests to the server without
leaving the page.
-->
<%= form_for(current_user.active_relationships.find_by(followed_id: @user.id),
             html: { method: :delete },
             remote: true) do |f| %>
  <%= f.submit "Unfollow", class: "btn" %>
<% end %>
